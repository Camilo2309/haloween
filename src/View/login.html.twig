{% extends 'layout.html.twig' %}
{% block loginUser %}

    <div class="container content">
        <h1 class="form-heading"></h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel">


                    <h2>Connectez-vous</h2>
                    {% if errorLoginUser %}

                        <div class="alert alert-danger" role="alert">
                            {{ errorLoginUser }}</div>
                    {% endif %}

                    <p>Veuillez entrer votre pseudo et votre mot de passe</p>
                </div>
                <form action="#" method="post" id="Login">

                    <div class="form-group">
                        <input type="text" name="pseudo" class="form-control" id="inputEmail" placeholder="Votre pseudo">
                    </div>

                    <div class="form-group">
                        <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Mot de passe">
                    </div>

                    <button type="submit" name="connection" value="" class="btn btn-primary">Login</button>

                </form>
            </div>
        </div>
    </div>
{% endblock %}
